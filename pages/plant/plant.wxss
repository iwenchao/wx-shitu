.up{
    color: white;
    font-size: 20px;
    font-family: 微软雅黑;
    width: 200px;
    height: 50px;
    text-align: center;
    border-radius: 5px;
    background-color: rgb(26, 160, 225);
}
.user-names{
    font-family: 微软雅黑;
    color: rgb(35,175,8);
}
