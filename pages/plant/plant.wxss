.baikeinfo{
    border: green;
    border-width: 1px;
    margin: 15rpx 40rpx;
    padding: 10px 10px 10px 10px;
    display: flex;
    flex-direction: row;
    box-shadow: 0rpx 2rpx 4rpx 4rpx #f2f2f2;
}

.baikecard{
    display: flex;
    flex-direction: column;
    color: white;
    text-align: center;
}
.baikecontent{
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    font-size: 24rpx;
    color: #858585;
    margin: 0rpx 40rpx;
    line-height: 40rpx;
}

.baikeform{
    font-size: 20rpx;
    color: #c0c0c0;
    border-top: 1rpx solid #eeeeee;
    margin: 30rpx 40rpx 0rpx 40rpx;
    padding: 20rpx;
}