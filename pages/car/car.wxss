/* pages/car/car.wxss */
.container{
    margin-top: -110px;
}

.img-wrapper{
    margin-top: 10px;
    width: 100%;
    height: 400rpx;
    border-width: 1px;
    background-color: gainsboro;
}

image{
    width: 100%;
    height: 100%;
}

.btn-upload{
    width: 200px;
    height: 50px;
    border-width: 1px;
    border-radius: 5px;
    margin-top: 20rpx;
    font-size: 20px;
    font-family: 微软雅黑;
    text-align: center;
    color: white;
    background-color: rgb(26, 160, 225);
}

.err-info{
    color: chocolate;
}
.car{
    font-family: 微软雅黑;
    color: rgb(35,175,8);
}


.baikeinfo{
    margin:15rpx 40rpx;
    display: flex;
    flex-direction: row;
    box-shadow:0rpx 2rpx 4rpx 4rpx  #f2f2f2;
}

.baikecontent{
    overflow:hidden;
    text-overflow:ellipsis;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    font-size:24rpx;
    color:#858585;
    margin:0rpx 40rpx ;
    line-height:40rpx;
}
.baikeform{
    font-size: 20rpx;
    color: #c0c0c0;
    border-top: 1rpx solid #eeeeee;
    margin:30rpx 40rpx 0rpx 40rpx;
    padding: 20rpx;
}
.baikecard{
    display: flex;
    flex-direction: column;
    color: #fff;
    text-align: center;
}